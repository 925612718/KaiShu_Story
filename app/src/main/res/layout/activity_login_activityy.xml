<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xal.cn.com.kaishu_story.weight.LoginActivityy">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/login_back"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:src="@mipmap/title_back"/>
    <TextView
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="登录"/>
</LinearLayout>
    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@mipmap/launch_icon"/>

    <Button
        android:id="@+id/bt_weixin"
        android:layout_marginTop="40dp"
        android:background="@color/colorAccen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信登录"/>
    <Button
        android:id="@+id/bt_phoneNumber"
        android:layout_marginTop="15dp"
        android:text="手机登录"
        android:background="@color/xianlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="我已阅读并接受"/>
        <Button
            android:id="@+id/mBut_xy"
            android:layout_width="wrap_content"
            android:textColor="#43ABFE"
            android:background="#ffffff"
            android:layout_height="wrap_content"
            android:text="《用户服务协议》"/>
    </LinearLayout>
</LinearLayout>
